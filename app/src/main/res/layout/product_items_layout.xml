<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="10dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:id="@+id/display_products_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/product_name_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Product name"
            android:textAlignment="textStart"
            android:textColor="#F54808"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/product_image_card"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/product_name_card"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/product_price_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_image_card"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:text="Product price"
            android:textAlignment="center"
            android:textColor="#F54808"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/product_description_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_price_card"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="10dp"
            android:text="Product description"
            android:textAlignment="center"
            android:textColor="#F54808"
            android:textSize="16dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>