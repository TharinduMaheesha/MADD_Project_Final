<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5C67A6"
    tools:context=".guidePageTwo">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"
                android:background="#FD0000"
                android:text="How to use Rider Control"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView"
                android:layout_width="209dp"
                android:layout_height="22dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="28dp"
                android:drawableLeft="@android:drawable/star_big_on"
                android:text="GiftME (PVT)Ltd."
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/scrollView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageView
                android:id="@+id/imageView"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="15dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/bike"
                />


            <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="01)  You should login to the app"
                android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="02) Click on Rider control button"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
            <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="02)i) Add new rider : Register new delivery rider employee"
            android:textAlignment="center"
                android:layout_marginTop="5dp"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="02)ii) View all rider : See all riders registered"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="02)iii) Update / Remove rider "
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="03) Go back and make sure to logout"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/imageView2"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="15dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/bikego"
                />

        </LinearLayout>
    </ScrollView>

</FrameLayout>