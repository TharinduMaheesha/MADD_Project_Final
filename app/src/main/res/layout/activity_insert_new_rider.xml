<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".InsertNewRider">

    <TextView
        android:id="@+id/textView"
        android:layout_width="209dp"
        android:layout_height="22dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="28dp"
        android:drawableLeft="@android:drawable/star_big_on"
        android:text="GiftME (PVT)Ltd."
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="650dp"
        android:text="Delivery Boys Registering Section"
        android:textColor="#3F51B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/nameD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:drawableLeft="@android:drawable/ic_menu_send"
                android:ems="10"
                android:hint="name"
                android:inputType="textPersonName"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/addressD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:drawableLeft="@android:drawable/ic_menu_send"
                android:ems="10"
                android:hint="@string/Address"
                android:inputType="textPostalAddress"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/phoneD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:drawableLeft="@android:drawable/ic_menu_send"
                android:ems="10"
                android:hint="@string/Phone"
                android:inputType="phone"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/emailD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:drawableLeft="@android:drawable/ic_menu_send"
                android:ems="10"
                android:textSize="15dp"
                android:hint="@string/email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/ageD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:drawableLeft="@android:drawable/ic_menu_send"
                android:ems="10"
                android:hint="@string/age"
                android:inputType="number"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/bikenumberD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:drawableLeft="@android:drawable/ic_menu_send"
                android:ems="10"
                android:hint="@string/bikeNumber"
                android:inputType="textPersonName"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/nicD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:drawableLeft="@android:drawable/ic_menu_send"
                android:ems="10"
                android:hint="@string/NIC"
                android:inputType="number"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/lisonD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:drawableLeft="@android:drawable/ic_menu_send"
                android:ems="10"
                android:hint="@string/DrivingLisonNumber"
                android:inputType="number"
                android:textSize="15dp" />

            <Button
                android:id="@+id/reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/input_design"
                android:backgroundTint="#FF3030"
                android:drawableLeft="@android:drawable/ic_input_add"
                android:text="Register New"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="100dp"
                android:background="@drawable/input_design"
                android:backgroundTint="#717070"
                android:text="Back"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>