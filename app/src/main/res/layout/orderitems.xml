<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/order_payment_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:layout_alignParentStart="true"
            android:textAlignment="textStart"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold|italic"
            android:layout_marginTop="2dp"
            />

        <TextView
            android:id="@+id/order_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User name"
            android:layout_alignParentStart="true"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/order_payment_status"
            />

        <TextView
            android:id="@+id/order_user_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_alignParentStart="true"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/order_user_name"
            />

        <TextView
            android:id="@+id/order_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:layout_alignParentStart="true"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/order_user_address"
            />

        <TextView
            android:id="@+id/order_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:layout_alignParentStart="true"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/order_user_phone"
            />

    </RelativeLayout>

</RelativeLayout>