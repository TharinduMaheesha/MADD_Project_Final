<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategory">

    <TextView
        android:id="@+id/events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add new product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/linear1_event_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/events"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="45dp"
        >

        <Button
            android:id="@+id/birthday"
            android:layout_width="115dp"
            android:layout_height="80dp"
            android:text="Birthday"
            />

        <Button
            android:id="@+id/valentine"
            android:layout_width="115dp"
            android:layout_height="80dp"
            android:text="Valentine"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_event_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_event_layout"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="45dp"
        >

        <Button
            android:id="@+id/anniversary"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="Anniversary"
            />

        <Button
            android:id="@+id/graduation"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="Graduation"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_event_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_event_layout"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="45dp"
        >

        <Button
            android:id="@+id/fathers_day"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="Fathers' day"
            />

        <Button
            android:id="@+id/mothers_day"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="Mothers' day"
            />

    </LinearLayout>

</RelativeLayout>