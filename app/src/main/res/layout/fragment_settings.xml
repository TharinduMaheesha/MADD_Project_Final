<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/darker_gray"
        android:background="@android:color/holo_orange_dark"
        >

        <RelativeLayout
            android:id="@+id/rl_settings_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_marginRight="20dp"
            >

            <TextView
                android:id="@+id/close_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/settings_close"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/update_account_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/settings_update"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_settings"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@id/toolbar_settings"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile"
        />

    <TextView
        android:id="@+id/profile_image_settings_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image_settings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/settings_change_profile"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/change_user_name_settings"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image_settings_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/input_design_user_settings"
        android:hint="@string/settings_user_name"
        android:padding="10dp" />

    <EditText
        android:id="@+id/change_user_email_settings"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_user_name_settings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_design_user_settings"
        android:hint="@string/settings_user_email"
        android:padding="10dp" />

    <EditText
        android:id="@+id/change_user_phone_settings"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_user_email_settings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_design_user_settings"
        android:hint="@string/settings_user_phone"
        android:padding="10dp" />

    <EditText
        android:id="@+id/change_user_address_settings"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_user_phone_settings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_design_user_settings"
        android:hint="@string/settings_user_address"
        android:padding="10dp" />

    <TextView
        android:id="@+id/profile_settings_change_password_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:text="@string/user_settings_change_password"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>